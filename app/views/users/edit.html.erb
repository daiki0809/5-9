<div class="container">
	<div class="row">


<h1>User info</h1>

<% if @user.errors.any? %>
<div id ="error_explanation" class="error">
<h2><%= @user.errors.count %>error prohibited this odj from being saved:</h2>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
