<h1>User info</h1>

<%= form_for(@user) do |f| %>

	<p><%= f.label :name, "Name" %>
	<%= f.text_field :name %></p>

	<p><%= f.label :profile_image, "Image" %></p>
	<p><%= f.attachment_field :profile_image %></p>

	<p><%= f.label :introduction, "Introduction" %>
	<%= f.text_area :introduction %></p>

	<%= f.submit 'Update User' %>

<% end %>