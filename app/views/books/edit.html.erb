<main>
	<h1>Editing Book</h1>

	<%= form_for(@post) do |f| %>

		<P><strong>
		<%= f.label :title, "Title" %>
		</strong></P>
		<p><%= f.text_field :title %></p>

		<P><strong>
		<%= f.label :body, "Opinion" %>
		</strong></P>
		<p><%= f.text_area :body %></p>

		<%= f.submit "Update Book" %>

	<% end %>

	<p><%= link_to 'Show', book_path(@post.id) %> | <%= link_to 'Back', books_path %>
	</p>

</main>